# this is the total bias
bias: CUSTOM ARG=z.bias-0,q var=zbias,q PERIODIC=NO FUNC=-2*(zbias+2*log(q+1e-7)+2*log(1.0-q+1e-7))
BIASVALUE ARG=bias

opes: OPES_METAD ARG=z.node-0 PACE=500 BARRIER=30 TEMP=300

PRINT FMT=%g STRIDE=500 FILE=COLVAR ARG=*

